#!/usr/bin/env rakudo

use lib 'lib';
use lib ".";
use Conf;
use plot;
use util;

sub MAIN($dirs, $op = 'gpu')
{
    my $conf  = Conf.new;
    say $conf.addr;
    say "dir: $dirs";
    my @disks = parse_comma($dirs);
    my @tasks = @disks.rotor: $conf.num_of_spt_disks, :partial;
    my $path  = "";

    if ($op ~~ 'gpu') {
       my $path = ""; 
       for @disks -> $d {
           put "dir: $d" ;
           my $f_dir = '/sd' ~ $d ~ '/' ~ 'plots';
	   if ($f_dir.IO ~~ :e) {
	      $path = $path ~ $d ~ ","; 
	   }
       }
       qqx/tmunx new -s $op -d rakudo gpu_plotter.raku $path/;
    } elsif ($op ~~ 'copy') {
       my $sname = $op ~ '_' ~ $dirs;
       for @disks -> $d {
           put "dir: $d" ;
           my $f_dir = '/sd' ~ $d ~ '/' ~ 'plots';
	   if ($f_dir.IO ~~ :e) {
	      $path = $path ~ " -d,r $f_dir";
	   }
	   #$sname = $sname ~ $d;
       }
       say "path : $path";
       say "snameï¼š$sname";
       nossd($sname, $path, $conf.addr,$conf.mem_fpt, $conf.p_threads, $conf.m_threads);
    } else {
       say "wrong op type $op";
    }
}
