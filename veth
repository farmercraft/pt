#!/usr/bin/env rakudo

use lib 'lib';
use util;

sub MAIN($op = "stat")
{
    if ($op ~~ "stat") {
       my @addrs = get_veth_ip();
       for @addrs -> $a {
       	   say $a.key.Str;
	   say $a.value.Str;
	   my $ip = $a.key.Str;
	   my $base_port = $a.value.Str;
       	   say qqx/grpcurl  --plaintext -d "\{\}" $ip:$base_port spacemesh.v1.NodeService.Status/;
       }
    }
}
