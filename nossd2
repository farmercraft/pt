#!/usr/bin/env rakudo

use lib 'lib';
use lib '.';
use plot;
use util;
use Conf;

sub MAIN($dirs, $tmp_dir="/sdnv1/t1") 
{
    my $conf  = Conf.new;	
    my @disks = parse($dirs);
    my $path = "";    
    my $addr  = $conf.addr;
    my $level = $conf.nossd_level;
    say $level, $addr;
    my $num   = (^10000).pick;
    my $spath = '~/s' ~ $num;
    say $spath;

    for @disks -> $d {
	    say "dir: $d" ;
	    my $f_dir = '/sd' ~ $d ~ '/' ~ 'plots/';
            if ($conf.nossd_mining) {
	       $path = $path ~ '-d,r ' ~ $f_dir ~ " ";
	    } else {
	       $path = $path ~ '-d,~t ' ~ $f_dir ~ " ";
	    }
    }
    if ($conf.nossd_mining) {
       say "mining mode";
       say "qqx/tmux new -s mining -d client $path -c $level -a $addr/";
       my $sname = 'plot_' ~ $num;
       qqx/tmux new -s $sname -d client $path -c $level -a $addr -s $spath/;
    } else {
       say "ploting mode";
       if ($conf.notmp) {
       	    $path = $path ~ ' --no-temp ';            
       } else {
       	    $path = $path ~ '-d,t ' ~ $tmp_dir;
       }
       say $path;
       say "qqx/tmux new -s ploting -d client $path -c $level -a $addr -s $spath --no-gpu-mining/";
       my $sname = 'plot_' ~ $num;
       qqx/tmux new -s $sname -d client $path -c $level -a $addr -s $spath --no-gpu-mining/;
    }
}
